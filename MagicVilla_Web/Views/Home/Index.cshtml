@using Microsoft.AspNetCore.Components
@model IEnumerable<MagicVilla_Web.Models.Dto.VillaDTO>

<div class="mb-4">
    <img class="img-fluid shadow-lg" src="images/home/slide1.jpg" alt="Banner" style="max-height: 500px; object-fit: cover; width: 100%;" />
</div>

<div class="row g-4">
    @foreach (var villa in Model)
    {
        <div class="col-lg-6 p-5">
            <div class="card shadow border-0 rounded-4 overflow-hidden h-100" style="background-color: #f9f9f9;">
                <div class="row g-0 h-100">
                    <div class="col-md-5">
                        <img src="@villa.ImageUrl"
                             alt="@villa.Name"
                             class="img-fluid h-100 w-100"
                             style="object-fit: cover;" />
                    </div>

                    <div class="col-md-7 d-flex flex-column justify-content-between p-4">
                        <div>
                            <h3 class="text-primary fw-bold">@villa.Name</h3>
                            <p class="text-muted small">@((MarkupString)villa.Details)</p>
                        </div>

                        <div class="mt-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="#" class="btn btn-outline-primary px-4 rounded-pill shadow-sm">Book Now</a>

                                <div>
                                    <small class="text-dark">👥 Max: <b>@villa.Occupancy</b> adults</small><br />
                                    <small class="text-dark">📐 Size: <b>@villa.Sqft</b> sqft</small>
                                </div>

                                <div class="text-end">
                                    <span class="fw-bold fs-5 text-success">
                                        <i class="bi bi-currency-dollar"></i>
                                        <span style="border-bottom: 2px solid #28a745">@villa.Rate.ToString("c")</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
